#include <Servo.h>

#define PIN_SRV 3

Servo myServo;
int pos = 0;

void setup() {
  myServo.attach(PIN_SRV);
  delay(1000);
  myServo.write(0);
}

void loop() {
  for(pos = 0; pos <= 180; ++pos) {
      myServo.write(pos);
      delay(20);
    }

    for(pos = 180; pos >= 0; --pos) {
      myServo.write(pos);
      delay(20);
    }
}